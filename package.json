{
  "name": "act-digital-api",
  "version": "1.0.0",
  "description": "Act digital back-end challenge",
  "main": "server.js",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./infrastructure/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node infrastructure/server.ts",
    "dev": "nodemon infrastructure/server.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.1",
    "pg": "^8.13.1",
    "tsconfig-paths": "^4.2.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/pg": "^8.11.10",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.0"
  }
}